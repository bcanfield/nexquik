datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

generator nexquik {
    provider = "node ./dist/prismaGenerator.js"
    command  = "generate --group Group1 --include Product,Foo --group Group2 --include Product,Foo -init -output __tests__/core-functionality-tests/testOutputDirectory"
    disabled = env("DISABLE_NEXQUIK")
}

model Product {
    id    String @id
    name  String
    foo   Foo    @relation(fields: [fooId], references: [id])
    fooId String
}

model Foo {
    id      String    @id
    bar     String
    Product Product[]
}
