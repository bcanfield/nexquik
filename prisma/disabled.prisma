// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Booking {
    id           Int      @id @default(autoincrement())
    inviteeEmail String
    startDateUTC DateTime
    cancelCode   String
    events       Event[]
}

model Event {
    id        Int       @id @default(autoincrement())
    name      String
    startDate DateTime
    bookings  Booking[]
}
